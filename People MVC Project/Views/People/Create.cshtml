@model People_MVC_Project.Models.ViewModels.CreatePeopleViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Create a Human!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonName" class="control-label"></label>
                <input asp-for="PersonName" class="form-control" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" list="cityList" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
                <datalist id="cityList">
                    @foreach (string city in Model.CityList)
                    {
                        <option value="@city">@city</option>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Human" asp-controller="People">Back to List</a>
</div>


